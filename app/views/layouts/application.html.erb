<!DOCTYPE html>
<html>
  <head>
    <title>Serenity</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   
    <nav class='navbar'>
      <h5><%= link_to 'Logout', logout_path, method: :delete %></h5>
      <h5><%= link_to 'All Massages', massages_path %></h5>
      <h5><%= link_to 'New Massage', new_massage_path %></h5>
      <h5><%= link_to 'All Appointments', appointments_path %></h5>
      <h5><%= link_to 'New Appointment', new_appointment_path %></h5> 
    </nav>


    <div class='float-container'>

      <div class='float-child'>
        <div class='content'><%= yield %></div>
      </div>
      <div>
        <div class='img'><%= image_tag("Massag3.jpg") %></div>
      </div>

    </div>

  </body>
</html>
